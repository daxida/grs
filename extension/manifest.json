{
  "manifest_version": 3,
  "name": "Grs Extension",
  "short_name": "Grs",
  "description": "Greek rule-based spell checker",
  "version": "0.1.0",
  "author": "daxida",
  "minimum_chrome_version": "110",
  "offline_enabled": true,
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "permissions": [
    "tabs",
    "alarms",
    "scripting",

    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*",
    "file:///*/*"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "all_frames": false,
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "pkg/*"
      ]
    }
  ]
}
